{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "rootDir": "./src/be",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "watch": true
    },
    "include": [
        "./src/be/**/*"
    ],
    "exclude": [
        "views",
        "static",
        "node_modules"
    ],
    "typeRoots": [
        "node_modules/@types"
    ]
}